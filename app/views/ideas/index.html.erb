<div class="page-header">
  <h1>Grab an idea!</h1>
</div>

<%= link_to "Post a new idea", new_idea_path, class: "btn btn-warning" %>

<% @ideas.each do |idea| %>
<div class="idea">
  <strong><%= idea.name %></strong>
  <p><%= idea.idea %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(idea.created_at) + " ago", idea %>
    <span class="admin">
      | <%= link_to "Edit", edit_idea_path(idea) %> |
      <%= link_to "Delete", idea, method: :delete, data: {confirm: "Are you sure you want to delete this idea?"} %>
    </span>
  </div>
</div>
<% end %>